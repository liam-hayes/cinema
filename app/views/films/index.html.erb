<p id="notice"><%= notice %></p>

<h1>Listing Films</h1>

<table border = "1" cellpadding = "10">
  <thead>
    <tr>
      <th>Title</th>
      <th>Run time (minutes)</th>
      <th>Genre</th>
      <th>Rating</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.title %></td>
        <td><%= film.run_time %></td>
        <td><%= film.genre %></td>
        <td><%= film.rating %></td>
		<td><%= image_tag(film.image, :size => "100x100")%></td>
        <td><%= link_to 'Show', film %></td>
        <td><%= link_to 'Edit', edit_film_path(film) %></td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

