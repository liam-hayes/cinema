<p id="notice"><%= notice %></p>

<h1>Listing Screens</h1>

<table border = "1" cellpadding = "10">
  <thead>
    <tr>
	  <th>Screen Name</th>
      <th>Screen size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @screens.each do |screen| %>
      <tr>
	    <td><%= screen.name %></td>
        <td><%= screen.screen_size %></td>
        <td><%= link_to 'Show', screen %></td>
        <td><%= link_to 'Edit', edit_screen_path(screen) %></td>
        <td><%= link_to 'Destroy', screen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Screen', new_screen_path %>
