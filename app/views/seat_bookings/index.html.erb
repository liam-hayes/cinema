<p id="notice"><%= notice %></p>

<h1>Listing Seat Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Booking</th>
      <th>Seat</th>
      <th>Type</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seat_bookings.each do |seat_booking| %>
      <tr>
        <td><%= seat_booking.booking_id %></td>
        <td><%= seat_booking.seat_id %></td>
        <td><%= seat_booking.type %></td>
        <td><%= seat_booking.price %></td>
        <td><%= link_to 'Show', seat_booking %></td>
        <td><%= link_to 'Edit', edit_seat_booking_path(seat_booking) %></td>
        <td><%= link_to 'Destroy', seat_booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

